extends layout
block content
	include nav.pug
		br
		.container
			.row
				form.form-inline#url-form(action='/post' method='POST')
					.form-group
						input.form-control#url-input(type='text' placeholder='Enter a web address.' name='webshotLink')
					button.btn.btn-primary(type='submit') Post
		.container
			.row
				each val in posts
					.wrapper
						figure.figure
							button.btn.delete-button(type='button' name=val._id) X
							a(href=val.linkUrl target="_blank") 
								img.figure-img.img-fluid.rounded(src='./images/'+val.imgFileName height='250' width='250')
								figcaption.figure-caption #{val.title}
								
								
			
			