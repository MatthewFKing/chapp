extends layout
block content
	include nav.pug
	.main.container
		.row
			.col-md-6.col-md-offset-3
				h1.display-4.m-b-2 Log In
				form#user-form(action='/login' method='POST')
					.form-group
						label(for='email') Enter your email
						input#name-input.form-control(type='text', name='email')
					.form-group
						label(for='pw') Enter your password
						input#name-input.form-control(type='password', name='password')
					button.btn.btn-primary(type='submit') Log In
